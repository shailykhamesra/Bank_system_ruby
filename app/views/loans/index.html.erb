<h1>Listing loans</h1>
<%= link_to 'New loan', new_loan_path %>
<table>
  <tr>
    <th>loan_type</th>
    <th colspan="3"></th>
  </tr>
 
  <% @loans.each do |loan| %>
    <tr>
      <td><%= loan.loan_type %></td>
      <td><%= link_to 'Show', loan_path(loan) %></td>
      <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
      <td><%= link_to 'Destroy', loan_path(loan),method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
