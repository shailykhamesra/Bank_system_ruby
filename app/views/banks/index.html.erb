<h1>Listing banks</h1>
<%= link_to 'New bank', new_bank_path %>
<table>
  <tr>
    <th>name</th>
    <th>address</th>
    <th>phone</th>
    <th colspan="3"></th>
  </tr>
 
  <% @banks.each do |bank| %>
    <tr>
      <td><%= bank.name %></td>
      <td><%= bank.address %></td>
      <td><%= bank.phone %></td>
      <td><%= link_to 'Show', bank_path(bank) %></td>
      <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
      <td><%= link_to 'Destroy', bank_path(bank),method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
